#!/bin/sh -e
baseurl="https://github.com/measurement-kit/script-build-android/releases/"
v="0.10.2-1"
tarball="measurement-kit-android-$v.tar.gz"
sha256="3b8eecb8ebaaf9269750997594a6e2915321557629f55491e9286393c6f83d11"
o=MK_DIST
set -x
curl -fsSLO $baseurl/download/v$v/$tarball
[ "$sha256" = "`shasum -a 256 $tarball | awk '{print $1}'`" ]
rm -rf $o
install -d $o
(
 set -x
 cd $o
 tar -xzf ../$tarball
)
